{
  "name": "Tab Custom Multiname",
  "version": "1.1",
  "description": "Change any tab name using domain and url parameters",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "background.js",
      "install.js",
      "hot-reload.js"
    ],
    "persistent": false
  },
  "permissions": [
    "storage",
    "tabs",
    "http://*/",
    "https://*/"
  ],
  "options_page": "settings/index.html"
}
